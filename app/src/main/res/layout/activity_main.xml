<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0.00"
        android:textColor="#FFFFFF"
        android:textAlignment="viewEnd"
        android:gravity="end|center_vertical"
        android:textSize="30sp"
        android:padding="10sp"
        android:background="#424242"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4D4D4D"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="AC"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4D4D4D"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="+/-"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4D4D4D"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="%"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F19204"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="/"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="7"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="8"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="9"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F19204"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="x"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="5"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="6"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F19204"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="-"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="3"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F19204"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="0"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#50ADF8"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="."
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F19204"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:text="="
            />

    </LinearLayout>
</LinearLayout>
